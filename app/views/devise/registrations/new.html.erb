<link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">

<div class="homepage-title">
  <div class="small-1 large-6 small-centered large-centered columns">
      <div class="content-box-form-title">
        <h1 class="homepage-title small-3 large-6 small-centered large-centered">Want to register?</h1>
      </div>
  </div>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="column text-center small-2 large-4 small-centered large-centered">
        <div>
          <ul class "link-ul">
            <li class="link-box-bottom"<%= f.label :name %><br /></li>
            <%= f.text_field :name, autofocus: true %>
          </ul>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="column text-center small-2 large-4 small-centered large-centered">
        <div>
          <ul class "link-ul">
            <li class="link-box-bottom"<%= f.label :email %><br /></li>
            <%= f.email_field :email %>
          </ul>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="column text-center small-2 large-4 small-centered large-centered">
        <div>
          <ul class "link-ul">
            <li class="link-box-bottom"<%= f.label :password %><br /></li>

            <%= f.password_field :password, autocomplete: "off" %>
          </ul>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="column text-center small-2 large-4 small-centered large-centered">
        <div>
          <ul class "link-ul">
            <li class="link-box-bottom"<%= f.label :password_confirmation %><br /></li>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </ul>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="column text-center small-2 large-4 small-centered large-centered">
        <div>
          <ul class "link-ul">
            <div class="actions">
              <%= f.submit "Sign up" %>
              <%= render "devise/shared/links" %>
            </div>
          </ul>
        </div>
    </div>
  </div>


<% end %>
