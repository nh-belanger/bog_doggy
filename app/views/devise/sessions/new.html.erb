<link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">

<div class="homepage-title">
  <div class="small-1 large-6 small-centered large-centered columns">
      <div class="content-box-form-title">
        <h1 class="homepage-title small-3 large-6 small-centered large-centered">Care to sign in?</h1>
      </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
    <div class="column text-center small-2 large-4 small-centered large-centered">
        <div>
          <ul class "link-ul">
            <li class="link-box-bottom"<%= f.label :name %><br /></li>
            <%= f.text_field :name, autofocus: true %>
          </ul>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="column text-center small-2 large-4 small-centered large-centered">
        <div>
          <ul class "link-ul">
            <li class="link-box-bottom"<%= f.label :email %><br /></li>
            <%= f.email_field :email %>
          </ul>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="column text-center small-2 large-4 small-centered large-centered">
        <div>
          <ul class "link-ul">
            <li class="link-box-bottom"<%= f.label :password %><br /></li>

            <%= f.password_field :password, autocomplete: "off" %>

              <div class="link-box-bottom">
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %><br />
                    <li class="custom-text"<%= f.label :remember_me %></li>
                  </div>
                <% end -%>
              </div>

          </ul>
        </div>
    </div>
  </div>



  <div class="row">
    <div class="column text-center small-2 large-4 small-centered large-centered">
        <div>
          <ul class "link-ul">
            <div class="link-box-bottom">
              <div class="actions">
                <%= f.submit "Log in" %>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </ul>
        </div>
    </div>
  </div>
<% end %>
